<section class='sign-up'>
  <h2>Sign up</h2>

  <%= simple_form_for(resource, defaults: { input_html: { class: 'form-control' } }, as: resource_name, url: registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, autofocus: true %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</section>
