<h1>Sign up</h1>

<div class='access-form'>
  <%= simple_form_for(resource, defaults: { input_html: { class: 'form-control' } }, as: resource_name, url: registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :name, autofocus: true %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn-action" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
